<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="horizontal"
    tools:context="com.example.stupidexpressiongenerator.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textResult"
        android:layout_width="275dp"
        android:layout_height="42dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:text="Тут покищо нічого нема"
        android:textSize="20dp"
        android:fontFamily="serif"
        />

    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="97dp"
        android:text="Згенерувати" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="175dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="185dp"
        android:text="Додати слово:"
        android:id="@+id/textView"
         />
    <Button

        android:layout_width="75dp"
        android:layout_height="42dp"
        android:id="@+id/buttonExit"
        android:text="@string/text_exit"/>

    <RadioButton
        android:id="@+id/radBtnNoun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radBtnVerb"
        android:layout_alignBottom="@+id/radBtnVerb"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="іменник" />

    <RadioButton
        android:id="@+id/radBtnVerb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="дієслово"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/btnAddWord"
        android:layout_alignLeft="@+id/buttonGenerate"
        android:layout_alignStart="@+id/buttonGenerate" />

    <RadioButton
        android:id="@+id/radBtnAdj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radBtnVerb"
        android:layout_alignBottom="@+id/radBtnVerb"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/radBtnVerb"
        android:layout_toRightOf="@+id/radBtnVerb"
        android:text="прикметник" />

    <Switch
        android:id="@+id/isComplicated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="складний матюк"
        android:layout_alignBaseline="@+id/buttonGenerate"
        android:layout_alignBottom="@+id/buttonGenerate"
        android:layout_alignRight="@+id/btnAddWord"
        android:layout_alignEnd="@+id/btnAddWord"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button

        android:id="@+id/btnAddWord"
        android:background="@drawable/roundbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:layout_marginLeft="442dp"

        android:text="Додати"
         />


</RelativeLayout>
